---
title: Get Involved
---
<div class="rcc-hero rcc-hero-get-involved">
  <div class="rcc-hero-title-holder">
    <h5>Get Involved</h5>
  </div>
  <div class="rcc-hero-down-arrow-container">
    <a href="#get-involved-content">
      <img class="rcc-hero-down-arrow" src="/images/down-arrow.svg" alt="Scroll down for details">
    </a>
  </div>
</div>
<div class="rcc-content" id="get-involved-content">
  <% dato.get_involved_page_contents.each do |get_involved_page_content| %>
    <% if get_involved_page_content.heading %>
  <h1><%= get_involved_page_content.heading %></h1>
    <% end %>
    <% if get_involved_page_content.image %>
      <div class="rcc-content-images-words-container">
    <% end %>
    <div class="<% if get_involved_page_content.image %>rcc-content-words-container<% end %>">
      <%= markdown get_involved_page_content.body_text %>
    </div>
    <% if get_involved_page_content.image %>
      <div class="rcc-content-images-container rcc-content-images-container-<%= get_involved_page_content.image_position %>">
        <img class="rcc-normal" src="<%= get_involved_page_content.image.url(w: 500, fm: :jpg) %>" alt="<%= get_involved_page_content.image_description %>">
      </div>
    <% end %>
    <% if get_involved_page_content.image %>
      </div>
    <% end %>
    <% unless get_involved_page_content == dato.get_involved_page_contents.last %> 
    <hr>
    <% end %>
  <% end %>
</div>
