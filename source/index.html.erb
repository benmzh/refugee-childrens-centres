---
title: Home
---
<div class="rcc-hero rcc-hero-index">
  <div class="rcc-hero-down-arrow-container">
    <% if dato.home_page_quotation.quotation %>
    <div class="rcc-quotation-container">
      <div class="rcc-quotation-mark-container">
        <img src="../images/rcc-quotation-marks.png" class="rcc-hero-quotation-marks" alt="Quotation Marks">
      </div>
      <p class="rcc-hero-quotation-text">
        <%= dato.home_page_quotation.quotation %>
      </p>
      <div class="rcc-quotation-mark-container-closing">
        <img src="../images/rcc-quotation-marks.png" class="rcc-hero-quotation-marks rcc-hero-quotation-marks-closing" alt="Quotation Marks">
      </div>
    </div>
    <% if dato.home_page_quotation.reference %>
      <p class="rcc-hero-quotation-text rcc-hero-quotation-text-reference"><%= dato.home_page_quotation.reference %></p>
    <% end %>
    <% end %>
    <a href="#index-content">
      <img class="rcc-hero-down-arrow" src="/images/down-arrow.svg" alt="Scroll down for details">
    </a>
  </div>
</div>
<div class="rcc-content" id="index-content">
  <% dato.home_page_contents.each do |home_page_content| %>
    <% if home_page_content.heading %>
  <h1><%= home_page_content.heading %></h1>
    <% end %>
    <% if home_page_content.image %>
      <div class="rcc-content-images-words-container">
    <% end %>
    <div class="<% if home_page_content.image %>rcc-content-words-container<% end %>">
      <%= markdown home_page_content.body_text %>
    </div>
    <% if home_page_content.image %>
      <div class="rcc-content-images-container rcc-content-images-container-<%= home_page_content.image_position %>">
        <img class="rcc-normal" src="<%= home_page_content.image.url(w: 500, fm: :jpg) %>" alt="<%= home_page_content.image_description %>">
      </div>
    <% end %>
    <% if home_page_content.image %>
      </div>
    <% end %>
    <hr>
  <% end %>
  <h1>What We've Been Up To</h1>
  <script src="//assets.juicer.io/embed.js" type="text/javascript">
  </script>
  <link href="//assets.juicer.io/embed.css" media="all" rel="stylesheet" type="text/css" />
  <ul class="juicer-feed" data-feed-id="refugeechildrenscentres" data-per="6" data-pages="1" data-truncate="150">
    <h1 class="referral">
      <a href="https://www.juicer.io">
        Powered by Juicer
      </a>
    </h1>
  </ul>
</div>
